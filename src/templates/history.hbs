<form>
  <table class="history">
    <thead>
    <tr>
      <th>Date</th>
      <th>Days on Mission</th>
      <th>Supplies</th>
      <th>CFI</th>
      {{#if is_gm}}
        <th colspan="4">Actions</th>
      {{else}}
        <th>Actions</th>
      {{/if}}
    </tr>
    </thead>
    <tbody>
      {{#each history}}
        <tr>
          <td>{{this.[0]}}.{{this.[1]}}</td>
          <td>{{this.[3]}}</td>
          <td>{{this.[5]}}</td>
          <td>{{this.[9]}}</td>
          <td class="log-view" data-tooltip="View entry" data-index="{{@index}}"><i class="fa-solid fa-magnifying-glass"></i></td>
          {{#if ../is_gm}}
            <td class="log-reset" data-tooltip="Revert game state to entry" data-index="{{@index}}"><i class="fa-solid fa-rotate-left"></i></td>
            <td class="log-delete" data-tooltip="Delete this entry" data-index="{{@index}}"><i class="fa-regular fa-trash"></i></td>
            <td class="log-delete-below" data-tooltip="Delete this entry and below" data-index="{{@index}}"><i class="fa-regular fa-layer-minus"></i></td>
          {{/if}}
        </tr>
      {{/each}}
    </tbody>
    <tfoot></tfoot>
  </table>
  <div class="flexrow action-buttons">
    <button id="first"><i class="fa-solid fa-left-to-line"></i></button>
    <button id="previous"><i class="fa-solid fa-left"></i></button>
    <button id="next"><i class="fa-solid fa-right"></i></button>
    <button id="last"><i class="fa-solid fa-right-to-line"></i></button>
  </div>

</form>
