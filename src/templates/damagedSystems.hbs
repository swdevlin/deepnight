<form>
  <section class="deepnight resources">
    <div class="flexrow action-buttons">
      <div title="Supplies">
        <div>
          <label for="supplies">
            {{localize "DEEPNIGHT.DamagedSystemsDialog.Supplies"}}
          </label>
        </div>
        <span class="dnr-spacer"><i class="fa-light fa-crate-apple"></i></span><b>{{supplies}}</b>
      </div>
      <div title="exotic materials">
        <div><label for="exoticMaterials">{{localize "DEEPNIGHT.ExoticMaterials"}}</label></div>
        <span class="dnr-spacer"><i class="fa-light fa-sparkles"></i></span>
        <b>{{exoticMaterials}}</b>
      </div>
      <div title="rare materials">
        <div>
          <label for="rareMaterials">{{localize "DEEPNIGHT.RareMaterials"}}</label>
        </div>
        <span class="dnr-spacer"><i class="fa-light fa-comet"></i></span>
        <b>{{rareMaterials}}</b>
      </div>
      <div title="rare biologicals">
        <div><label for="rareBiologicals">{{localize "DEEPNIGHT.RareBiologicals"}}</label></div>
        <span class="dnr-spacer"><i class="fa-light fa-dna"></i></span>
        <b>{{rareBiologicals}}</b>
      </div>
    </div>
  </section>
  <table class="damages">
    <thead>
    <tr>
      <th>{{localize "DEEPNIGHT.DamagedSystemsDialog.Subsystem"}}</th>
      <th>{{localize "DEEPNIGHT.DamagedSystemsDialog.Severity"}}</th>
      <th>{{localize "DEEPNIGHT.DamagedSystemsDialog.Effect"}}</th>
      {{#if is_gm}}
        <th colspan="3">{{localize "DEEPNIGHT.DamagedSystemsDialog.Repair"}}</th>
      {{else}}
        <th>{{localize "DEEPNIGHT.DamagedSystemsDialog.Repair"}}</th>
      {{/if}}
    </tr>
    </thead>
    <tbody>
      {{#each items}}
        <tr>
          <td>{{this.subsystem}}</td>
          <td>{{this.severity}}</td>
          <td>{{this.description}}</td>
          <td>
            {{localize "DEEPNIGHT.DamagedSystemsDialog.Personnel"}}: {{this.personnel}}<br/>
            {{localize "DEEPNIGHT.DamagedSystemsDialog.Hours"}}: {{this.hours}}<br/>
            {{localize "DEEPNIGHT.DamagedSystemsDialog.SupplyUnits"}}: {{this.su}}<br/>
            {{localize "DEEPNIGHT.DamagedSystemsDialog.RareExotic"}}: {{this.rareMaterials}} or {{this.exoticMaterials}} <br/>
          </td>
          {{#if ../is_gm}}
            <td class="repair" data-tooltip="{{localize "DEEPNIGHT.DamagedSystemsDialog.RepairTooltip"}}" data-index="{{@index}}">
              <i class="fa-regular fa-screwdriver-wrench"></i>
            </td>
            <td class="cancel-repair" data-tooltip="{{localize "DEEPNIGHT.DamagedSystemsDialog.DeleteTooltip"}}" data-index="{{@index}}">
              <i class="fa-regular fa-trash-can-xmark"></i>
            </td>
          {{/if}}
        </tr>
      {{/each}}
    </tbody>
    <tfoot></tfoot>
  </table>
  <div class="flexrow action-buttons">
    <button id="first"><i class="fa-solid fa-left-to-line"></i></button>
    <button id="previous"><i class="fa-solid fa-left"></i></button>
    <button id="next"><i class="fa-solid fa-right"></i></button>
    <button id="last"><i class="fa-solid fa-right-to-line"></i></button>
  </div>

</form>
