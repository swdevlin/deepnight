  </div>
</header>

<div class="dnr-panels">
  <div class="flexrow">
    <div>
      <div class="dnr-panel dnr-ceipanel">
        <div class="dnr-panel-text">
          <p>
            <input
              type="number"
              data-dtype="Number"
              step="1"
              id="cei"
              name="cei"
              placeholder="0"
              class="form-fields dnr-valueinput"
              value="{{cei}}"/>
          </p>
        </div>
      </div>
      <div class="dnr-panel dnr-ceimpanel">
        <div class="dnr-panel-text">
          <p>
            <input
              type="number"
              data-dtype="Number"
