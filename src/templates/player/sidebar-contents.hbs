<header class="directory-header">
  <div class="flexrow">
    <div><i class="fa-light fa-calendar-days"></i> <b>{{year}}.{{day}}</b></div>
    <div>{{localize "DEEPNIGHT.daysOnMission"}}: <b>{{daysOnMission}}</b></div>
  </div>
</header>

<header class="directory-header">
  <div class="flexrow">
    <div title="rare materials"><i class="fa-light fa-comet"></i> <b>{{rareMaterials}}</b></div>
    <div title="exotic materials"><i class="fa-light fa-sparkles"></i> <b>{{exoticMaterials}}</b></div>
    <div title="rare biologicals"><i class="fa-light fa-dna"></i> <b>{{rareBiologicals}}</b></div>
  </div>
</header>

<header class="directory-header">
