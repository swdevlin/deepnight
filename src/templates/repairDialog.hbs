<form>
  <table class="repair-costs">
    <thead>
      <tr>
        <th>{{localize "DEEPNIGHT.RepairDialog.MaterialTH"}}</th>
        <th>{{localize "DEEPNIGHT.RepairDialog.OnHandTH"}}</th>
        <th>{{localize "DEEPNIGHT.RepairDialog.UnitsNeededTH"}}</th>
        <th>{{localize "DEEPNIGHT.RepairDialog.UnitsSpentTH"}}</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{{localize "DEEPNIGHT.RepairDialog.Time"}}</td>
        <td></td>
        <td>{{damage.hours}}</td>
        <td>
          <input
            id="timeTaken"
            type="number"
            name="timeTaken"
            value="{{damage.hours}}"
            style="width: 8ch;"
          />
        </td>
      </tr>
      <tr>
        <td>{{localize "DEEPNIGHT.RepairDialog.SUs"}}</td>
        <td>{{supplies}}</td>
        <td>{{damage.su}}</td>
        <td>
          <input
            id="supplyUnitsUsed"
            type="number"
            name="supplyUnitsUsed"
            value="{{damage.su}}"
            style="width: 8ch;"
          />
        </td>
      </tr>
      <tr>
        <td>{{localize "DEEPNIGHT.RepairDialog.Rare"}}</td>
        <td>{{rareMaterials}}</td>
        <td>{{damage.rareMaterials}}</td>
        <td>
          <input
            id="rareMaterialsUsed"
            type="number"
            name="rareMaterialsUsed"
            value="{{damage.rareMaterials}}"
            style="width: 8ch;"
          />
        </td>
      </tr>
      <tr>
        <td>{{localize "DEEPNIGHT.RepairDialog.Exotic"}}</td>
        <td>{{exoticMaterials}}</td>
        <td>{{damage.exoticMaterials}}</td>
        <td>
          <input
            id="exoticMaterialsUsed"
            type="number"
            name="exoticMaterialsUsed"
            value="{{damage.exoticMaterials}}" style="width: 8ch;"
          />
        </td>
      </tr>
    </tbody>
    <tfoot></tfoot>
  </table>
</form>
